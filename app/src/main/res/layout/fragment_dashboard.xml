<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbdeg.unityplanner.DashboardFragment"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dashboard_day_1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dashboard_today_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due Today"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/dashboard_today_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_green"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/dashboard_today_list"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/dashboard_today_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="175dp"
        android:text="Nothing due"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dashboard_tomorrow_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due Tomorrow"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:contentDescription="Add assignment button"
            android:layout_alignParentRight="true"
            android:id="@+id/dashboard_tomorrow_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_green" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dashboard_tomorrow_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nothing due"
        android:textSize="17sp" />

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/dashboard_tomorrow_list"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>
